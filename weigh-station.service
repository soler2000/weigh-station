[Unit]
Description=Weigh Station (FastAPI)
After=network-online.target
Wants=network-online.target

[Service]
User=pi
WorkingDirectory=/home/pi/weigh-station
Environment="PYTHONUNBUFFERED=1"
# Optional: configure pins with env if not using D5/D6
# Environment="DATA_PIN=D5" "CLOCK_PIN=D6"
ExecStart=/home/pi/weigh-station/.venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=on-failure

[Install]
WantedBy=multi-user.target